{
  "name": "@uptrace/core",
  "version": "1.8.0",
  "description": "Uptrace JS core",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uptrace/uptrace-js.git",
    "directory": "packages/uptrace-core"
  },
  "scripts": {
    "test": "nyc ts-mocha -p tsconfig.json test/**/*.test.ts",
    "test:browser": "nyc karma start --single-run",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json -p ../../",
    "codecov:browser": "nyc report --reporter=json && codecov -f coverage/*.json -p ../../",
    "build": "pnpm run compile",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "precompile": "tsc --version",
    "version:update": "node ../../scripts/version-update.js",
    "compile": "rm -rf ./build && pnpm run version:update && tsc -p .",
    "docs-test": "linkinator docs/out --silent",
    "docs": "typedoc --tsconfig tsconfig.json --exclude test/**/*.ts",
    "prepare": "pnpm run compile",
    "watch": "tsc -w"
  },
  "keywords": [
    "opentelemetry",
    "nodejs",
    "browser",
    "tracing",
    "profiling",
    "metrics",
    "stats",
    "monitoring",
    "uptrace"
  ],
  "author": "Uptrace Authors",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.js.map",
    "build/src/**/*.d.ts",
    "doc",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@opentelemetry/api": "~1.3.0",
    "@opentelemetry/core": "~1.8.0",
    "@opentelemetry/instrumentation": "~0.34.0",
    "@opentelemetry/resources": "~1.8.0",
    "@opentelemetry/sdk-trace-base": "~1.8.0",
    "cross-fetch": "3.1.5"
  },
  "devDependencies": {
    "@types/mocha": "10.0.0",
    "@types/node": "18.11.9",
    "@types/sinon": "10.0.13",
    "@typescript-eslint/eslint-plugin": "5.44.0",
    "eslint": "8.28.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "gts": "3.1.1",
    "mocha": "10.1.0",
    "nyc": "15.1.0",
    "sinon": "14.0.2",
    "ts-mocha": "10.0.0",
    "typescript": "4.9.3"
  }
}
